<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.woobledev.wooble.view.kbv.KenBurnsView
        android:id="@+id/ken_burns_images"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Welcome to"
        android:textSize="28sp"
        android:id="@+id/textView"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Wooble"
        android:textSize="42sp"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_above="@+id/loginFB"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="50dp"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/loginFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>
    <Button
        android:id="@+id/btn_parse_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LoginParse?"
        android:layout_below="@+id/loginFB"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>


